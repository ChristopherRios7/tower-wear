<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/wear_notification_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:deviceIds="wear"
    tools:context=".activities.FollowMeActivity">

    <android.support.wearable.view.GridViewPager
        android:id="@+id/grid_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"/>

    <com.o3dr.android.dp.wear.widgets.indicators.LinePageIndicator
        android:id="@+id/horizontal_page_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        app:centered="true"
        app:selectedColor="@android:color/white"
        app:strokeWidth="2dp"
        android:layout_marginBottom="10dp"/>

    <com.o3dr.android.dp.wear.widgets.indicators.CirclePageIndicator
        android:id="@+id/vertical_page_indicator"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|start"
        android:layout_marginStart="10dp"
        app:centered="true"
        android:orientation="vertical"/>
</FrameLayout>
